;=====================================================
; Module battery:
; Shows information about the battery
;=====================================================
[module/battery]
type = internal/battery

; Use the following command to list batteries and adapters
; $ ls -l /sys/class/power_supply
battery = BAT0
adapter = ADP0

; Useful in case the battery never reports 100% charge
full-at = 98

; Time format (see "man date")
time-format = %H:%M

; Format when battery is charging
label-charging-foreground = ${colors.text}
format-charging						 = <animation-charging> <label-charging>
label-charging						 = "%percentage%% %time% "

; Format when battery is discharging
label-discharging-foreground = ${colors.text}
format-discharging						= <ramp-capacity> <label-discharging>
label-discharging							= "%percentage%% %time% "

; Format when battery is fully charged
;format-full-background = ${colors.bat-discharging}
format-full						 = <ramp-capacity> <label-full>
label-full						 = Full

ramp-capacity-foreground = ${colors.icons}
ramp-capacity-0  = " ÔÇé"
ramp-capacity-1  = " ÔÅ∫"
ramp-capacity-2  = " ÔÅª"
ramp-capacity-3  = " ÔÅº"
ramp-capacity-4  = " ÔÅΩ"
ramp-capacity-5  = " ÔÅæ"
ramp-capacity-6  = " ÔÅø"
ramp-capacity-7  = " ÔÇÄ"
ramp-capacity-8  = " ÔÇÅ"
ramp-capacity-9  = " ÔÇÇ"
ramp-capacity-10 = " ÔÅπ"

animation-charging-foreground = ${colors.icons}
animation-charging-0 = " ÔÇÜ"
animation-charging-1 = " ÔÇá"
animation-charging-2 = " ÔÇà"
animation-charging-3 = " ÔÇâ"
animation-charging-4 = " ÔÇä"
animation-charging-5 = " ÔÇã"
animation-charging-6 = " ÔÇÖ"
animation-charging-framerate = 750

